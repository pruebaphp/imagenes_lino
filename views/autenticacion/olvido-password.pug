extends ../layout/index

block contenido 
        div(class="div-mayor")
            h1 Mis
                span Imágenes
            h2= pagina 
            div(class="div-central")
                
                if errores
                    each error in errores 
                        p(class="parrafo-error")= error.msg
                form(method="POST")
                    div(class="div-hijo")
                        label(class="label-hijo") Tu email
                        input(type="text" class="datos-hijo" name="email" placeholder="Ingresa tu email" value= datos ? datos.email : '')

                        input(type="submit" class="btn-hijo" value="Recuperar password")
                        div(class="div-enlaces") 
                            a(href="/login") Prefiero iniciar Sesión
